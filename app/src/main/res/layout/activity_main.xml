<?xml version="1.0" encoding="utf-8"?>
<com.woniu.demo_view.DragConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:drag_view_id="@+id/iv_drag_view"
    tools:context="com.woniu.demo_view.MainActivity">

    <com.woniu.demo_view.CameraView
        android:id="@+id/m_camera_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_drag_view"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@mipmap/ic_launcher_round"
        android:visibility="invisible" />

</com.woniu.demo_view.DragConstraintLayout>
